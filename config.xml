<?xml version='1.0' encoding='utf-8'?>
<widget id="com.webdevbuilder.clockdisplay" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>ClockDisplay</name>
    <description>
        A sample Clock Android Display Application.
    </description>
    <author email="agotel@gmail.com" href="https://www.webdevbuilder.tech/">
        Aristotelis Agoratsios
    </author>
	<icon src="res/android/icon.png" platform="android" width="57" height="57" density="mdpi" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
